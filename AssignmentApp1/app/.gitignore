cat > .gitignore << 'EOF'
# Built files
*.apk
*.ap_

# Files for the ART/Dalvik VM
*.dex

# Java class files
*.class

# Generated files
bin/
gen/
out/

# Gradle files
.gradle/
build/

# Local configuration file (sdk path, etc)
local.properties

# Proguard folder generated by Eclipse
proguard/

# Log Files
*.log

# Android Studio
*.iml
.idea/
.DS_Store

# Keystore files
*.jks
*.keystore

# External native build folder
.externalNativeBuild

# Google Services (e.g. APIs or Firebase)
google-services.json

# Fastlane
fastlane/report.xml
fastlane/Preview.html
fastlane/screenshots

# NDK
obj/
EOF